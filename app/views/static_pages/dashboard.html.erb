<% provide(:title, @user.name + " Dashboard" ) %>
<% openStr = "<div class='row'>".html_safe %>
<% closeStr = "</div>".html_safe %>
<% int = 0 %>


<h4><%= current_user.name %>&#39;s enquiries &nbsp;</h4><h5> <%= Date.today.to_formatted_s(:rfc822)  %></h5>
<% if params[:remindersOnly] == "y" %>
<h5>Enquiries with reminder dates: </h5>
<% end %>

<%= render partial: 'dash_view_btns' %>
<div class='row'>
  <% if @assigned_enquiries.any? %>
    <%  @assigned_enquiries.each do |enquiry| %>
      <%  if (int > 0) && (int % 3 == 0) %>
        <%=  closeStr %>
        <%=  openStr %>
      <% end %>
    
      <%= render partial: 'dashboard_enquiry', locals: { enquiry: enquiry } %>
      <% int = int + 1 %>
    
    <% end %>
  <% else %>
      <h3>No Enquiries</h3>
  <% end %>
</div>

  
  <ul class="pagination pull-right">
    <%= will_paginate  @assigned_enquiries, :container => false %>
  </ul>
  <div class="clearfix"></div>



<%#= render template: 'users/show' %>