<% provide(:title, 'Create Customer') %>
<h1>Create a Customer</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @customer, :html => {:multipart => true} do |f| %>
	    <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :alt_email, "Alternate Email" %>
      <%= f.text_field :alt_email %>
      <%= f.label :phone %>
      <%= f.text_field :phone %>    
      <%= f.label :mobile %>
      <%= f.text_field :mobile %>    
      <%= f.label :fax %>
      <%= f.text_field :fax %>      

      <% f.fields_for :home_address do |builder| %>
      <p>
        <%= builder.label :street1 %> <br>
        <%= builder.text_field :street1 %>
        <%= builder.label :street2 %> <br>
        <%= builder.text_field :street2 %>        
        <%= builder.label :city %> <br>
        <%= builder.text_field :city %>  
        <%= builder.label :state %> <br>
        <%= builder.text_field :state %>  
        <%= builder.label :zipcode %> <br>
        <%= builder.text_field :zipcode %>  
        <%= builder.label :country %> <br>
        <%= builder.text_field :country %>          
      </p>
      <% end %>
    
    
      <%= f.submit "Create a Customer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>