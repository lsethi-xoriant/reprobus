<% provide(:title, 'Edit Customer') %>
<h1 class="page-header">Edit Customer</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @customer, :html => {:multipart => true} do |f| %>
	    <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :alt_email, "Alternate Email" %>
      <%= f.text_field :alt_email %>
      <%= f.label :phone %>
      <%= f.text_field :phone %>    
      <%= f.label :mobile %>
      <%= f.text_field :mobile %>        
      <%= f.label :fax  %>
      <%= f.text_field :fax %>      
    
    <%= f.fields_for :address do |a| %>
        
        <%= a.label :street1 %> 
        <%= a.text_field :street1 %>
        <%= a.label :street2 %> 
        <%= a.text_field :street2 %>        
        <%= a.label :city %> 
        <%= a.text_field :city %>  
        <%= a.label :state %> 
        <%= a.text_field :state %>  
        <%= a.label :zipcode %> 
        <%= a.text_field :zipcode %>  
        <%= a.label :country %> 
        <%= a.text_field :country %>          
      
      <% end %>
    
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
   
  </div>
</div>
