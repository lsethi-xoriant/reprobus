<% provide(:title, "Login Page") %>

<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
  
    <%= form_for(:session, url: sessions_path, html: {multipart: true, class: "login-form"} ) do |f| %>
      
      <div class="row">
        <div class="input-field col s12 center">
          <img src=<%= asset_path('trapeze-login.png') %> alt="" class="responsive-img valign" width="140px">
        </div>
      </div>

      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.text_field :email, :autofocus => true %>
          <%= f.label :email, 'Username', class: "center-align" %>
        </div>
      </div>
      
      
       <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <%= f.password_field :password %>
          <%= f.label :password , class: "active" %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12 m12 l12  login-text">
            <input type="checkbox" id="remember_me" />
            <label for="remember_me">Remember me</label>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= button_tag( :class => "btn waves-effect waves-light col s12") do %>
            Login
          <% end %>
        </div>
      </div>

      
      <div class="row">
        <div class="input-field col s6 m6 l6">
          <p class="margin medium-small"><%= link_to "Register Now!", signup_path %></p>
        </div>
        <div class="input-field col s6 m6 l6">
            <p class="margin right-align medium-small"><%= link_to "Forgot password?", new_password_reset_path %></p>
        </div>
      </div>
      
    <% end %>
  </div>
</div>