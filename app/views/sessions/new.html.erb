<% provide(:title, "Sign in") %>
<div class="row">
<div class="col-md-4 col-md-offset-4">
  <h2>Welcome to TripEase</h2>
  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title"><strong>Sign in </strong></h3></div>
    <div class="panel-body">
    <%= form_for(:session, url: sessions_path, :html => {:multipart => true} ) do |f| %>

        <div class="form-group">    
          <%= f.label :email, 'Username', :class => "control-label" %>
          <%= f.text_field :email, :placeholder => "Enter email", :style => "border-radius:0px" %>
        </div>

        <div class="form-group">       
          <%= f.label :password, "Password #{link_to "(forgotten password?)", new_password_reset_path}".html_safe, :class => "control-label" %>
          <%= f.password_field :password, :placeholder => "Password", :style => "border-radius:0px" %>
        </div>

        <!--     CODE TO FIX - do we need a remember me tick box? or do we handle this another way... i.e sessions, and timeouts...
              <%= f.check_box :remember_me %>
              <%= f.label "Remember Me", :class => "checkbox inline" %>   -->

        <div class="form-group"> 
          <%= f.label :password, "New user?  #{link_to "Sign up now!", signup_path}".html_safe, :class => "control-label" %>
        </div>

      <%= f.submit "Sign in", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
</div>