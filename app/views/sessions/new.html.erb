<% provide(:title, "Sign in") %>
<h1 class="page-header">Sign in</h1>

<div class="row">
  <div class="span6 offset2">
    <%= form_for(:session, url: sessions_path, :html => {:multipart => true, :class => "form-horizontal"} ) do |f| %>

      <div class="form-group">    
        <%= f.label :email  %>
        <div class="col-sm-6">
          <%= f.text_field :email %>
        </div>
      </div>
    
      <div class="form-group">       
        <%= f.label :password %>
        <div class="col-sm-6">
          <%= f.password_field :password %>
        </div>
      </div>
    
<!--     
      <%= f.check_box :remember_me %>
      <%= f.label "Remember Me", :class => "checkbox inline" %>   -->

       <div class="row">
       <div class="col-md-6 col-md-offset-3"> 
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      </div></div>
    <% end %>
       <div class="row">
       <div class="col-sm-4 col-md-offset-3"> 
       <p><%= link_to "forgotten password?", new_password_reset_path %></p>
       </div></div>
    
       <div class="row">
       <div class="col-sm-4 col-md-offset-3"> 
       <p>New user? <%= link_to "Sign up now!", signup_path %></p>
       </div></div>
  </div>
</div>
