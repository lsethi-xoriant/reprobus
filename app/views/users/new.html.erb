<% provide(:title, 'Sign up') %>


<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <div class="row">
      <div class="col s12 center">
        <h4 class="page-header">Sign up</h4>
      </div>
    </div>
      
    <%= form_for @user, :html => {:multipart => true, :class => "login-form"} do |f| %>
	    <%= render 'shared/error_messages', object: f.object %>
    
      <div class="row">
        <div class="input-field col s12 center">
          <img src=<%= asset_path('login-logo.png') %> alt="" class="circle responsive-img valign profile-image-login">
          <p class="center login-form-text">tripeze</p>
        </div>
      </div>

      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.text_field :name, :autofocus => true %>
          <%= f.label :name, 'Username', class: "center-align" %>
        </div>
      </div>
      
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-communication-email prefix"></i>
          <%= f.text_field :email %>
          <%= f.label :email, 'Email', class: "center-align" %>
        </div>
      </div>
      
       <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <%= f.password_field :password %>
          <%= f.label :password %>
        </div>
      </div>
      
       <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <%= f.password_field :password_confirmation %>
          <%= f.label :password_confirmation %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= button_tag( :class => "btn waves-effect waves-light col s12") do %>
            Create my account
          <% end %>
        </div>
      </div>

    <% end %>
  </div>
</div>
