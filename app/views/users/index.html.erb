<% provide(:title, 'All Users') %>
<h1 class="page-header">All Users</h1>


<div class="panel panel-default">
  <div class="panel-heading">
    All Users
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">                                    
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Num Active Enquiries</th>
          <th>Num Enq Created</th>
          <th>Joined</th>
          <th>Thumbnail</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %> </td>
          <td><%= user.email %></td>
          <td><%= user.assigned_enquiries.active.count %></td>
          <td><%= user.enquiries.count %></td>
          <td><%= user.created_at.strftime("%d/%m/%Y")  %></td>
          <td><%= gravatar_for(user, size: 52) %></td>          
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>