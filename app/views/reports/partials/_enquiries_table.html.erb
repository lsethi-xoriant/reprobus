
<div class="section">
  <table class="responsive-table display">
    <thead>
      <tr>
        <th>#</th>
        <th>Customer Name</th>
        <th>Consultant</th>
        <th>Date enquiry received</th>
        <th>Quote</th>
        <th>Booking</th>
        <th>Adv. campaign</th>
        <th>Destination</th>
      </tr>
    </thead>
    <tbody>
      <% objects.each do |obj| %> 
        <tr>
          <td><%= obj.id %></td>
          <td><%= obj.try(:lead_customer).try(:fullname) %></td>
          <td><%= obj.try(:assignee).try(:name) %></td>
          <td><%= obj.created_at.strftime("%d-%m-%Y") %></td>
          <td><%= obj.itineraries.any? ? "Y" : "N" %></td>
          <td><%= obj.try(:itineraries).map(&:itinerary_price).compact.any? ? "Y" : "N" %></td>
          <td></td>
          <td><%= obj.try(:destination).try(:name) %></td>
          <td><%= link_to obj.name, "#{entity.pluralize.downcase}/#{obj.id}/edit" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
