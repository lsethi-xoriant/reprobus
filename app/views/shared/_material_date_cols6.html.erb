<div class="input-field col s6">
  <% if local_assigns.has_key? :value %>
    <%= f.date_field field.to_sym, class: local_assigns.has_key?(:wide_range) ? 'datepicker-wide-range' : 'datepicker', :"data-value" => value %>
    <% active = " active" if value %>
  <% else %>
    <%= f.date_field field.to_sym, class: local_assigns.has_key?(:wide_range) ? 'datepicker-wide-range' : 'datepicker' %>
  <% end %>
  
  <% if local_assigns.has_key? :name %>
    <%= f.label field.to_sym, name, class: "active" %>
  <% else %>
   <%= f.label field.to_sym, class: "active" %>
  <% end %>
</div>
