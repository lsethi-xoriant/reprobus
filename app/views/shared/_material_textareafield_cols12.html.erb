<div class="input-field col s12">
  <% if local_assigns.has_key? :length %>
    <% limit = length %>
  <% else %>
    <% limit = "120" %>
  <% end %>
  
  <% if local_assigns.has_key? :icon %>
   <i class="<%= icon %>"></i>
  <% end %>
  
  <% if local_assigns.has_key? :ckeditor_field %>
    <%= name %>
  <% elsif local_assigns.has_key? :name %>
    <%= f.label field.to_sym, name %>
  <% else %>
    <%= f.label field.to_sym %>
  <% end %>

  <% if local_assigns.has_key? :ckeditor_field %>
    <%= f.cktext_area field.to_sym, class: "ckeditor-textarea", :ckeditor => { :toolbar => 'mini' } %>
  <% else %>
    <%= f.text_area field.to_sym, class: "materialize-textarea", length: limit %>
  <% end %>
</div>

