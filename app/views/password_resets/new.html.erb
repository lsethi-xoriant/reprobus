<% provide(:title, "Reset Password") %>
<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_tag password_resets_path, :method => :post do %>
    
      <div class="row">
        <div class="input-field col s12 center">
          <img src=<%= asset_path('login-logo.png') %> alt="" class="circle responsive-img valign profile-image-login">
          <p class="center login-form-text">Rocket trip</p>
        </div>
      </div>
      
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= text_field_tag :email, params[:email], :autofocus => true %>
          <%= label_tag :email, 'Email', class: "center-align" %>
        </div>
      </div>
      
      <%= button_tag( :class => "btn waves-effect waves-light col s12") do %>
        Reset Password
      <% end %>
    
    <% end %>
  </div>
</div>
