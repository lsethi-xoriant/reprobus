<%= form_for :lost, url: '#', method: :post, html: { id: 'lost_form' } do |c| %>
  <div id="lost_modal" class="modal modal-fixed-footer white">
    <div class="modal-content">
      <h4><i class="mdi-image-add-to-photos"></i>  Lost</h4>

      <ul>
        <li>
          <div class="row">
            <div id="lost_container" class="col s12">

              <div class="row">
                  <%= c.hidden_field :type, value: nil %>
                  <%= c.hidden_field :id, value: nil %>

                  <div class="input-field col s10">
                    <%= c.text_field :note %>
                    <%= c.label :note, class: 'active' %>
                  </div>

              </div>

            </div>
          </div>
        </li>
      </ul>

    </div>

    <div class="modal-footer">
      <div class="col s10">
        <a href="#" class="modal-action waves-effect waves-lighten-3 green btn-flat" id='lost_OK'>Mark as Lost</a>
      </div>
      <div class="col s2">
        <a href="#" class="modal-action modal-close waves-effect waves-lighten-3 red btn-flat">Cancel</a>
      </div>
    </div>
  </div>

<% end %>