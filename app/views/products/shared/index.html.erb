<% provide(:title, 'All ' + params[:type]) %>
<h1 class="page-header">All <%= params[:type]%></h1>

<div class="panel panel-default">
  <div class="panel-heading">
    All <%= params[:type]%>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>Country</th>
          <th>Supplier Name</th>
          <th>Price Sng</th>
          <th>Price Dbl</th>
          <th>Price Trp</th>
        </tr>
      </thead>
      <tbody>
        <% @producst.each do |product| %>
        <tr>
          <td><%= link_to(product.name, get_index_path(product)) %></td>
          <td><%= product.city %></td>
          <td><%= product.country %></td>
          <td><%= product.supplierName %></td>
          <td><%= number_to_currency(product.price_single, precision: 2) %></td>
          <td><%= number_to_currency(product.price_double, precision: 2) %></td>
          <td><%= number_to_currency(product.price_triple, precision: 2) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


