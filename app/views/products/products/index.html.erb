<% provide(:title, 'All ' + nice_products_name(params[:type])) %>

<div class="section">
  <a href=<%= get_new_path(params[:type]) %> ><button type="button" class="waves-effect waves-light btn">Create new <%= params[:type] %></button></a>
</div>

<div class="divider"></div>

<div class="section">
  <div id="table-datatables">
   <div class="row">
      <div class="col s12 m12 l12">
        <table id="data-table-simple" class="responsive-table display" >
          <thead>
            <tr>
              <th>Name</th>
              <th>City</th>
              <th>Country</th>
              <th>Supplier Name</th>
              <th>Price Sng</th>
              <th>Price Dbl</th>
              <th>Price Trp</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
            <tr>
              <td><%= link_to(product.name, get_edit_path(product)) %></td>
              <td><%= product.city %></td>
              <td><%= product.country %></td>
              <td><%= product.supplierName %></td>
              <td><%= number_to_currency(product.price_single, precision: 2) %></td>
              <td><%= number_to_currency(product.price_double, precision: 2) %></td>
              <td><%= number_to_currency(product.price_tripple, precision: 2) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>