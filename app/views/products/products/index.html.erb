<% provide(:title, 'All ' + nice_products_name(params[:type])) %>
<h1 class="page-header">All <%= nice_products_name(params[:type]) %></h1>

<div class="row">
<br>
<div class="col-sm-2">
<a href=<%= get_new_path(params[:type]) %> ><button type="button" class="btn btn-primary btn-lg">Create new <%= params[:type] %></button></a>
</div>
</div>
<br><br>

<div class="panel panel-default">
  <div class="panel-heading">
    All <%= nice_products_name(params[:type])%>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>Country</th>
          <th>Supplier Name</th>
          <th>Price Sng</th>
          <th>Price Dbl</th>
          <th>Price Trp</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td><%= link_to(product.name, get_edit_path(product)) %></td>
          <td><%= product.city %></td>
          <td><%= product.country %></td>
          <td><%= product.supplierName %></td>
          <td><%= number_to_currency(product.price_single, precision: 2) %></td>
          <td><%= number_to_currency(product.price_double, precision: 2) %></td>
          <td><%= number_to_currency(product.price_tripple, precision: 2) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>