<% provide(:title, 'Edit Stopover') %>
<h1 class="page-header">Edit a Stopover</h1>
<div class="row">
  <div class="span6 offset3">

    <%= render partial: 'admin/dashboard/tableheader', locals: { entity: Stopover, state: "edit" } %>

    <%= form_for [:admin, @stopover], :html => {:multipart => true, :class => "form-horizontal"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= render partial: 'shared/standard_grouped_textfield', locals: { field: "name", f: f } %>
   
      <div class="row">
        <div class="col-sm-6 col-md-offset-3">    
        <%= f.submit "Edit a Stopover", class: "btn btn-large btn-primary" %>
        </div>
      </div>  
    <% end %>
  </div>
</div>
