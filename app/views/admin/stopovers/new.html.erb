<% provide(:title, 'Create Stopover') %>
<div class="row-fluid">
  <div class="page-header">
    <h1 class="page-header">Create a Stopover</h1>

    <%= render partial: 'admin/dashboard/tableheader', locals: { entity: Stopover, state: "new" } %>
    
    <%= form_for [:admin, @stopover], :html => {:multipart => true, :class => "form-horizontal"} do |f| %>
	    <%= render 'shared/error_messages', object: f.object %>
    
      <%= render partial: 'shared/standard_grouped_textfield', locals: { field: "name", f: f } %>
      
      <div class="row">
        <div class="col-sm-6 col-md-offset-3">        
          <%= f.submit "Create a Stopover", class: "btn btn-large btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
