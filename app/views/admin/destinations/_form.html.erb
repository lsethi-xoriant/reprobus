<div class="section">
  <%= render partial: 'admin/dashboard/tableheader', locals: { entity: Destination, state: "new" } %>
</div>
<div class="section">
  <%= form_for [:admin, @destination], :html => {:multipart => true, :class => "form-horizontal" } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
    <%= render partial: 'shared/material_textfield_cols6', locals: { field: "name", f: f } %>
    </div>
    <div class="row">
    <div class="input-field col s6">
      <%= f.select(:country_id, options_for_select([[f.object.country_name, f.object.country_id]],f.object.country_id),{},{class: "select2-countries browser-default"}) %>
      <%= f.label :country_id, "Country",  class: 'active' %>
    </div>
    </div>
     <div class="row">
      <%= f.fields_for :default_image, @destination.default_image do |t| %>
        <%= render partial: 'shared/image_field', locals: { imageHolder: @destination.default_image, f: t, title: "Default Image (recomended size 880px x 880px):" } %>
      <% end %>
    </div>
    <br>
    <br>
    <div class="row">
      <div class="col s6">    
      <%= f.submit "Save Destination", class: "btn" %>
      </div>
    </div>
  <% end %>
</div>
