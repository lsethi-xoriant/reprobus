<% provide(:title, 'Edit Destination') %>
<h1 class="page-header">Edit a Destination</h1>
<div class="row">
  <div class="span6 offset3">
  
    <%= render partial: 'admin/dashboard/tableheader', locals: { entity: Destination, state: "edit" } %>

	  <%= form_for [:admin, @destination], :html => {:multipart => true, :class => "form-horizontal"} do |f| %>
	    <%= render 'shared/error_messages', object: f.object %>
    
      <%= render partial: 'shared/standard_grouped_textfield', locals: { field: "name", f: f } %>
          
      <div class="row">
        <div class="col-sm-6 col-md-offset-3">    
        <%= f.submit "Edit a Destination", class: "btn btn-large btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
