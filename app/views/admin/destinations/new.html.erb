<% provide(:title, 'Create Destination') %>
<div class="row-fluid">
  <div>
    <h1 class="page-header">Create a Destination</h1>

    <%= render partial: 'admin/dashboard/tableheader', locals: { entity: Destination, state: "new" } %>

    <%= form_for [:admin, @destination], :html => {:multipart => true, :class => "form-horizontal"} do |f| %>
	    <%= render 'shared/error_messages', object: f.object %>
    
      <%= render partial: 'shared/standard_grouped_textfield', locals: { field: "name", f: f } %>
        
      <div class="row">
        <div class="col-sm-6 col-md-offset-3">    
         <%= f.submit "Create a Destination", class: "btn btn-large btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
