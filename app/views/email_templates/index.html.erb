<% provide(:title, 'Email Templates') %>
<h1 class="page-header">Email Templates</h1>


<div class="panel panel-default">
  <div class="panel-heading">
    All Customers
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Subject</th>
          <th>From Email</th>
          <th>Triggers</th>
        </tr>
      </thead>
      <tbody>
        <% @email_templates.each do |et| %>
        <tr>
          <td><%= link_to(et.name, et) %></td>
          <td><%= et.subject %></td>
          <td><%= et.from_email %></td>
          <td><%= et.triggers.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
