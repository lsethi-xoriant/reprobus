<div class="input-field comments_cont col s2" >
<a class="waves-effect waves-light btn right grey lighten-5 modal-trigger" href="#product_info_<%=info.id%>"><span class="black-text">Add Comments</span></a> 
</div>
 

  <!-- Modal Structure -->
  <div id="product_info_<%=info.id%>" class="modal">
    <div class="modal-content">
      <h4><i class="mdi-editor-insert-comment"></i>  Add Comments</h4>

      <ul>
        <li>
          <div class="row">
            <div class="col s12">
              <p class="product_details" ><%= info.get_product_details %></p>
              
              <div class="row"><%= render partial: 'shared/material_textareafield_cols12', locals: { field: "comment_for_customer", f: f, length: "500"} %></div>
              <div class="row"><%= render partial: 'shared/material_textareafield_cols12', locals: { field: "comment_for_supplier", f: f, length: "500"} %></div>
              <p><em>Please note: you will need to save the Itinerary form for these comments to be saved.</em></p>
            </div>  
          </div>
        </li> 
      </ul>
      
    </div>

    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">OK</a>
    </div>
  </div>
