<a class="waves-effect waves-light btn right light-blue darken-1 modal-trigger" href="#cruise_legs<%=@cruise.id%>">Cruise Info</a> 

<% int = 0 %>
  <!-- Modal Structure -->
  <div id="cruise_legs<%=@cruise.id%>" class="modal">
    <div class="modal-content">
      <h4><i class="mdi-action-list"></i>  Cruise Legs</h4>

      <ul>
          <li>
            <div>
            <% @cruise_legs.each do |leg| %>
              <% int += 1 %>
              
                <div class="row">
                    <div class="col s1">
                      <%= text_field_tag(:position, int, class: "cruise_legs_details", :readonly => true  ) %>
                    </div>
                    <div class="col offset-s1 s8">
                      <%= text_field_tag(:cruise_leg_name, leg.name, class: "cruise_legs_details", :readonly => true  ) %>
                    </div>  
                </div>
              
            <% end %>
          
          </div>
      </li> 
      </ul> 

    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>
  

