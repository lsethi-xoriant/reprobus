<a class="waves-effect waves-light btn right grey darken-1 modal-trigger" href="#product_info_<%=@info.id%>">Product Info</a> 

<% int = 0 %>
  <!-- Modal Structure -->
  <div id="product_info_<%=@info.id%>" class="modal">
    <div class="modal-content">
      <h4><i class="mdi-action-list"></i>  Product Info</h4>

      <ul>
        <li>
          <div class="row">
            <div class="col offset-s1 s8">
              <p class="product_details" ><%= @info.get_product_details %></p>
            </div>  
          </div>
        </li> 
      </ul>
      
    </div>

    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>
