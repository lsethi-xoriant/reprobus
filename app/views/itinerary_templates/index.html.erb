<% provide(:title, 'Templates') %>

<div class="section">
    <a href=<%= new_itinerary_template_path %> ><button type="button" class="waves-effect waves-light btn">Create New Template</button></a>
</div>

<div class="divider"></div>

<div class="section">
  <div id="table-datatables">
   <div class="row">
      <div class="col s12 m12 l12">
        <table id="data-table-simple" class="responsive-table display" >
          <thead>
            <tr>
              <th>Name</th>
              <th>Number Products</th>
              <th>Created</th>
              <th>Updated</th>
            </tr>
          </thead>
          <tbody>
            <% @templates.each do |temp| %>
            <tr>
              <td><a href=<%=edit_itinerary_template_path(temp)%>><%= temp.name %></a></td>
              <td><%= temp.itinerary_template_infos.count %></td>
              <td><%= temp.created_at.strftime("%d/%m/%Y") %></td>
              <td><%= temp.updated_at.strftime("%d/%m/%Y") %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>