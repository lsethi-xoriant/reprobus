<% provide(:title, 'All Suppliers') %>
<h1 class="page-header">All Suppliers</h1>

<a href=<%= new_supplier_path %> ><button type="button" class="btn btn-primary btn-sm">Create New Supplier</button></a>
<br><br>

<div class="panel panel-default">
  <div class="panel-heading">
    All Suppliers
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">                                    
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Title</th>
          <th>Email</th>
          <th>Phone</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |cust| %>
        <tr>
          <td><a href=<%= supplier_path cust %> </a> <%= cust.fullname  %></td>
          <td><%= cust.title %></td>
          <td><%= cust.email %></td>
          <td><%= cust.phone %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
