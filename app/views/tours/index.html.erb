<!-- New sort table from here  -->
<% provide(:title, 'All Tours') %>
<h1 class="page-header">All Tours</h1>


<div class="panel panel-default">
  <div class="panel-heading">
    All Tours
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">                                    
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Destination</th>
          <th>Country</th>
          <th>Price</th>
          <th>Thumbnail</th>
        </tr>
      </thead>
      <tbody>
        <% @tours.each do |tour| %>
        <tr>
          <td><%= link_to tour.tourName, tour %> </td>
          <td><%= tour.destination %></td>
          <td><%= tour.country %></td>
          <td><%= tour.tourPrice %></td>
          <td><%= image_tag tour.image_url(:thumb).to_s %></td>          
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>