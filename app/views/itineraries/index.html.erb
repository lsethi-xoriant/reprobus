<% provide(:title, 'Itineraries') %>

<div class="section">
    <a href=<%= new_itinerary_path %> ><button type="button" class="waves-effect waves-light btn">Create New Itinerary</button></a>
</div>

<div class="divider"></div>

<div class="section">
  <div id="table-datatables">
   <div class="row">
      <div class="col s12 m12 l12">
        <table id="data-table-simple" class="responsive-table display" >
          <thead>
            <tr>
              <th>Name</th>
              <th>Number Products</th>
              <th>Created</th>
              <th>Updated</th>
            </tr>
          </thead>
          <tbody>
            <% @itineraries.each do |itin| %>
            <tr>
              <td><a href=<%=edit_itinerary_path(itin)%>><%= itin.name %></a></td>
              <td><%= itin.itinerary_infos.count %></td>
              <td><%= itin.created_at.strftime("%d/%m/%Y") %></td>
              <td><%= itin.updated_at.strftime("%d/%m/%Y") %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>