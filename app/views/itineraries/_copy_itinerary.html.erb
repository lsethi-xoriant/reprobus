<div class="input-field copy_itinerary_cont input-field col s3" >
  <a
    id="CopyItineraryBtn"
    class="waves-effect waves-light btn right deep-purple darken-1 modal-trigger tooltipped"
    data-position="bottom"
    data-delay="50"
    data-tooltip="Copy Itinerary"
    href="#copy_itinerary_modal_<%=f.object.id%>">

    Copy Itinerary

  </a>
</div>

<div id="copy_itinerary_modal_<%=f.object.id%>" class="modal modal-fixed-footer white">
  <div class="modal-content">
    <h4><i class="mdi-image-add-to-photos"></i>  Copy Itinerary</h4>

    <ul>
      <li>
        <div class="row">
          <div id="copy_template_container" class="col s12">

            <div class="row">
                  
              <div class="input-field col s2">
                <%= f.date_field :start_date, class:"datepicker start_leg_itinerary", :"data-value" =>  f.object.start_date %>
                <%= f.label :start_date, class: 'active' %>
              </div>

            </div>

          </div>
        </div>
      </li>
    </ul>

  </div>

  <div class="modal-footer">
    <a href="#" 
       id="copy_itinerary_OK"
       class="modal-action modal-close waves-effect waves-lighten-3 green btn-flat" data-id="<%= f.object.id %>"
       data-old-date="<%= f.object.start_date %>">
    
       Copy
    
    </a>

    <a href="#" id="copy_itinerary_CANCEL" class="modal-action modal-close waves-effect waves-lighten-3 red btn-flat">Cancel</a>
  </div>
</div>