<div class="detailsbox">

  <% if info.product && !info.product.image_remote_url.blank?  %>
    <div class="imgdetails"><img src=<%= info.product.get_dropbox_image_link %> alt="" /></div>
  <% else %>  
    <div class="imgdetails">&nbsp;</div>
  <% end %>
  
  <% if info %>
    <div class="contdetails">
      <p class="title"><%= "#{info.get_itinerary_header_details(preFix)}" %></p>
      <% if @confirmed && (info.respond_to? :supplier_name) %>
        <p class="caption"><%= "Local Contact - #{info.try(:supplier_name)}" %></p>
      <% end %>
      <p class="address"><strong><%= "#{info.get_product_address}" %></strong></p>
      <p class="phone"><strong><%= "#{info.get_product_phone}" %></strong></p>
      <br>
      <p class="caption"><%= "#{info.get_product_description}"%></p>
    </div>
  <%end%>
  
  <% if info.get_room_type %>
    <div class="clear45"></div>
    
    <div class="imgdetails"><img src=<%= info.get_room_type.get_dropbox_image_link %> alt="" /></div>
      
      <div class="contdetails">
        <p class="title2"><%= "#{info.get_room_type_name}" %></p>
        <p class="caption"><%= "#{info.get_room_type.get_product_description}"%></p>
      </div>
  <%end%> 

</div>

<div class="clear50"></div>
