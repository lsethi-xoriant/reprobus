<% provide(:title, 'All Bookings') %>
<h1 class="page-header">All Bookings</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    All Bookings
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Booking</th>
          <th>Customer Name</th>
          <th>Email</th>
          <th>Amount</th>
          <th>deposit</th>
          <th>Assigned To</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
        <tr>
          <td><%= link_to(booking.name, booking_path(booking)) %></td>
          <td><%= link_to(booking.dasboard_customer_name, booking.customer) %></td>
          <td><%= booking.customer.email %></td>
          <td><%= number_to_currency(booking.amount, precision: 0) %></td>
          <td><%= number_to_currency(booking.deposit, precision: 0) %></td>
          <td><%= booking.assigned_to_name %></td>
          <td><%= booking.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


