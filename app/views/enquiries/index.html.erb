<% provide(:title, 'All Enquiries') %>
<h1 class="page-header">All Enquiries</h1>


<div class="panel panel-default">
  <div class="panel-heading">
    All Enquiries
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Enquiry</th>
          <th>Customer Name</th>
          <th>Email</th>
          <th>Date Added</th>
          <th>Phone</th>
          <th>Assigned To</th>
        </tr>
      </thead>
      <tbody>
        <% @enquiries.each do |enquiry| %>
        <tr>
          <td><%= link_to(enquiry.name, enquiry) %></td>
          <td><%= link_to(enquiry.dasboard_customer_name, enquiry.first_customer) %></td>
          <td><%= enquiry.customer_email %></td>
          <td><%= enquiry.created_at.strftime("%d/%m/%Y") %></td>
          <td><%= enquiry.customer_phone %></td>
          <td><%= enquiry.assigned_to_name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

