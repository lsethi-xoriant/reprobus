
<div class="nested-fields">
<div class ="card-panel">

  <div class ="row">
    <div class="field">
      <div class="input-field col s2">
        <%= f.select :title, options_for_select(titles_list, disabled: "Select Title", selected: f.object.title || "Select Title"), {}, {} %>
      </div>
      
      <div class="field">
        <%= render partial: 'shared/material_textfield', locals: { col: "s3",field: "first_name", f: f } %>
        <%= render partial: 'shared/material_textfield', locals: { col: "s3", field: "last_name", f: f } %>
      </div>
    
      <div class="input-field offset-s2 col s2">
        <%= f.check_box :lead_customer, {class: "lead-customer-check", checked: main_object.is_customer_lead(f.object)}, true, false %>
        <%= f.label :lead_customer %>
      </div>
      
    </div>
  </div>
  
  <div class ="row">
    <div class="field">
      <%= render partial: 'shared/material_emailfield', locals: { col: "s3", field: "email", f: f } %>
      <%= render partial: 'shared/material_textfield', locals: { col: "s3", field: "phone", f: f } %>
    </div>
    
   
    <div class="input-field offset-s1 col s3">
      <% if f.object.id.present? %>
          <a
            class="input-field waves-effect waves-light btn right deep-purple darken-1 modal-trigger tooltipped"
            data-position="bottom"
            data-delay="50"
            data-tooltip="Edit Customer"
            target='_blank'
            href="<%= edit_customer_path(f.object.id) %>">
  
            Edit Customer
          </a>
      <% end %>
    </div>
     
    <%= f.hidden_field :id %>
     
    <div class="input-field offset-s1 col s1">
      <%= link_to_remove_association  f, { class: "btn-floating btn-small waves-effect waves-light red right"} do %>
                    <i class="mdi-content-clear"></i>
      <% end %>
    </div>

  </div>
  
</div>
</div>
