<% provide(:title, 'All Bookings') %>
<h1 class="page-header">All Bookings</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    All Bookings
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table id="sort_table" class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Booking</th>
          <th>Customer Name</th>
          <th>Email</th>
          <th>Amount</th>
          <th>Phone</th>
          <th>Assigned To</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |enquiry| %>
        <tr>
          <td><%= link_to(enquiry.name, enquiry) %></td>
          <td><%= link_to(enquiry.dasboard_customer_name, enquiry.first_customer) %></td>
          <td><%= enquiry.customer_email %></td>
          <td><%= number_to_currency(enquiry.amount, precision: 0) %></td>
          <td><%= enquiry.customer_phone %></td>
          <td><%= enquiry.assigned_to_name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


